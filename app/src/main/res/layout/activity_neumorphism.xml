<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDECEA"
    android:padding="8dp"
    tools:context=".view.activity.NeumorphismActivity">

    <kevin.le.learnkotlin.view.components.neumorphism.NeumorphismImageButton
        style="@style/Widget.Neumorphism.Button"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_settings"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </kevin.le.learnkotlin.view.components.neumorphism.NeumorphismImageButton>

    <kevin.le.learnkotlin.view.components.neumorphism.NeumorphismButton
        style="@style/Widget.Neumorphism.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </kevin.le.learnkotlin.view.components.neumorphism.NeumorphismButton>

</androidx.constraintlayout.widget.ConstraintLayout>